<odoo>
    <data>

        <record id="invoice_duedate_update" model="ir.cron">
            <field name="name">Duedate Amount</field>
            <field name="model_id" ref="model_invoice_ebm"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="state">code</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 00:05:00')"/>
            <field name="code">model._due_update()</field>
        </record>

    </data>
</odoo>