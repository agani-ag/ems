<odoo>
    <data>

<!-- Display Client -->

        <template id="meter_login">
                        <!-- <t t-call="website.layout"> -->
<style>
body {
    font-family: Arial, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    background-color: #f4f4f4;
}

.container {
    display: flex;
    flex-direction: column;
    width: 300px;
}

.form-container {
    background-color: #fff;
    padding: 20px;
    margin-bottom: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

form input {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #ddd;
    border-radius: 5px;
}

form button {
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

form button:hover {
    background-color: #0056b3;
}

</style>

        <div class="container">
        <div id="BookingForm" class="form-container">
            <h2>EB Bill</h2>
            <form method="POST" action="/eb/invoice">

                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                        <div class="form-group">
                            <label for="number">Meter Number:</label>
                            <input type="number" class="form-control" name="number" 
                                required="required"/>
                        </div>

                        <button type="submit" class="btn btn-primary mt-3">Check</button>
                    </form>
        </div>
    </div>

            <!-- </t> -->
            
        </template>

<!-- Create Client -->

        <template id="eb_invoice" name="Create Client">
            <style>
                    body {
                        font-family: Arial, sans-serif;
                        margin: 0;
                        padding: 0;
                        background-color: #f0f0f0;
                        color: #333;
                    }
                    .container {
                        width: 80%;
                        max-width: 1200px;
                        margin: 0 auto;
                        padding: 20px;
                        background: #fff;
                        border-radius: 8px;
                        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                    }
                    h1 {
                        color: #333;
                        text-align: center;
                        font-size: 2.5em;
                        margin-bottom: 0.5em;
                    }
                    p {
                        line-height: 1.6;
                        margin: 0 0 1em;
                    }
                    a {
                        color: #3498db;
                        text-decoration: none;
                    }
                    a:hover {
                        text-decoration: underline;
                    }
                    .button {
                        display: inline-block;
                        padding: 10px 20px;
                        margin: 10px 0;
                        background-color: #3498db;
                        color: #fff;
                        text-align: center;
                        border-radius: 5px;
                        text-decoration: none;
                        font-weight: bold;
                    }
                    .button:hover {
                        background-color: #2980b9;
                    }
                    th, td 
                        {
                            padding: 8px;
                            text-align: Center;
                            border-bottom: 1px solid #ddd;
                        }
                    .print-button:hover {
                                            background-color: #0056b3;
                                        }
                    @media print {
                        .print-button {
                            display: none; /* Hide the button when printing */
                        }
                    }
                </style>
                <div class="container">
                    <h1>TamilNadu Electricity Billing</h1>
                    <t t-foreach="invoice" t-as="rec">
                        <table border="2px" width="95%">
                            <tr><td>Meter Number</td><td><t t-esc="rec.meter_id.meter_num"/></td></tr>
                            <tr><td>Name</td><td><t t-esc="rec.customer_id.name"/></td></tr>
                            <tr><td>Invoice Date</td><td><t t-esc="rec.invoice_date"/></td></tr>
                            <tr><td>Due Date</td><td><t t-esc="rec.due_date"/></td></tr>
                            <tr><td>Amount</td><td>₹<t t-esc="rec.amount"/></td></tr>
                            <tr><td>Due Amount</td><td>₹<t t-esc="rec.due_amount"/></td></tr>
                            <tr><td>Status</td><td><t t-esc="rec.status"/></td></tr>
                        </table>
                        <button class="print-button" onclick="window.print();">Print</button>
                    </t>
                </div>
        </template>

    </data>
</odoo>