<odoo>
    <!-- city EBM -->
    <data>

<!-- city EBM Form -->
        <record id="city_ebm_form" model="ir.ui.view">
            <field name="name">city.ebm.form</field>
            <field name="model">city.ebm</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <group>
                         <group>
                            <field name="city_id" invisible="1"/>
                            <field name="name"/>
                            <field name="district_id"/>
                            <field name="uq_code" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Pincode">
                            <field name="pincode_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                </form>
            </field>
        </record>

<!-- city EBM Tree -->
        <record id="city_ebm_tree" model="ir.ui.view">
            <field name="name">city.ebm.tree</field>
            <field name="model">city.ebm</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="city_id" optional="True"/>
                    <field name="name"/>
                    <field name="district_id"/>
                    <field name="uq_code" optional="1"/>
                </tree>
            </field>
        </record>

<!-- city EBM Search -->
        <record id="city_ebm_search" model="ir.ui.view">
            <field name="name">city.ebm.search</field>
            <field name="model">city.ebm</field>
            <field name="arch" type="xml">
                <search>
                    <field name="city_id"/>
                    <field name="name"/>
                    <field name="district_id"/>

                    <!-- Filters -->
                </search>
            </field>
        </record>

        <record id="city_ebm_action" model="ir.actions.act_window">
            <field name="name">City</field>
            <field name="res_model">city.ebm</field>
            <field name="view_mode">tree,form,search</field>
        </record>

        <menuitem id="city_ebm_menu"
                  name="City"
                  parent="config_ebm"
                  action="city_ebm_action"
                  sequence="2"/>
                     
    </data>
</odoo>