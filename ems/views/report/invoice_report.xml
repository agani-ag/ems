<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- EBM Invoice Report -->

    <record id="invoice_ebm_report" model="ir.actions.report">
        <field name="name">Invoice Report</field>
        <field name="model">invoice.ebm</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ebm.invoice_ebm_template</field>
        <field name="report_file">ebm.invoice_ebm_template</field>
    </record>

    <template id="invoice_ebm_template">
        <t t-call="web.basic_layout">

            <style>
                    body {
                        font-family: Arial, sans-serif;
                        margin: 0;
                        padding: 0;
                        background-color: #f0f0f0;
                        color: #333;
                    }
                    .container {
                        width: 100%;
                        max-width: 1200px;
                        margin: 0 auto;
                        padding: 20px;
                        background: #fff;
                        border-radius: 8px;
                        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                    }
                    h1 {
                        color: #333;
                        text-align: center;
                        font-size: 2.5em;
                        margin-bottom: 0.5em;
                    }
                    p {
                        line-height: 1.6;
                        margin: 0 0 1em;
                    }
                    a {
                        color: #3498db;
                        text-decoration: none;
                    }
                    a:hover {
                        text-decoration: underline;
                    }
                    .button {
                        display: inline-block;
                        padding: 10px 20px;
                        background-color: #3498db;
                        color: #fff;
                        text-align: center;
                        border-radius: 5px;
                        text-decoration: none;
                        font-weight: bold;
                    }
                    .button:hover {
                        background-color: #2980b9;
                    }
                    th, td 
                        {
                            padding: 8px;
                            text-align: Center;
                            border-bottom: 1px solid #ddd;
                        }
                </style>
                <div class="container" align="center">
                    <h1>TamilNadu Electricity Billing</h1>
                    <t t-foreach="docs" t-as="rec">
                        <table border="2px" width="95%">
                            <tr><td>Meter Number:</td><td><t t-esc="rec.meter_id.meter_num"/></td></tr>
                            <tr><td>Name:</td><td><t t-esc="rec.customer_id.name"/></td></tr>
                            <tr><td>Invoice Date:</td><td><t t-esc="rec.invoice_date"/></td></tr>
                            <tr><td>Due Date:</td><td><t t-esc="rec.due_date"/></td></tr>
                            <tr><td>Amount:</td><td>₹<t t-esc="rec.amount"/></td></tr>
                            <tr><td>Due Amount:</td><td>₹<t t-esc="rec.due_amount"/></td></tr>
                            <tr><td>Status:</td><td><t t-esc="rec.status"/></td></tr>
                        </table>
                    </t>
                </div>

        </t>
    </template>


</odoo>