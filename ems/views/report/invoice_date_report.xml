<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- EBM Date Report -->

    <record id="invoice_ebm_report_action" model="ir.actions.report">
        <field name="name">Invoice Date Report</field>
        <field name="model">wizard.invoice.ebm.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ebm.invoice_report_template</field>
        <field name="report_file">ebm.invoice_report_template</field>
    </record>

    <template id="invoice_report_template">
        <t t-call="web.basic_layout">
            <center>
                <h1>Invoice Date Report</h1>
                <h6><t t-esc="from"/> :<t t-esc="to"/></h6>
                <br/>
            </center>
            <table class="table table-striped">
                    <thead>
                        <th>S.No</th>
                        <th>Name</th>
                        <th>Meter</th>
                        <th>Status</th>
                        <th>Amount</th>
                    </thead>
                    <tbody>
                        <t t-set="count" t-value="1"/>
                        <t t-set="total" t-value="0"/>
                        <t t-set="invoice_ids" t-value="invoice_records"/>
                        <t t-foreach="invoice_ids" t-as="invoice_id">
                            <tr align="center">
                                <td><t t-esc="count"/></td>
                                <td><t t-esc="invoice_id.customer_id.name"/></td>
                                <td><t t-esc="invoice_id.meter_id.meter_num"/></td>
                                <td><t t-esc="invoice_id.status"/></td>
                                <td>₹<t t-esc="invoice_id.amount"/></td>
                            </tr>
                            <t t-set="count" t-value="count + 1"/>
                            <t t-set="total" t-value="invoice_id.amount + total"/>
                        </t>
                        <tr>
                            <td colspan="4" align="right"><h6><b>Total Amount</b></h6></td>
                            <td align="center"><h6><b>₹<t t-esc="total"/></b></h6></td>
                        </tr>
                    </tbody>
                </table>
        </t>
    </template>


</odoo>