<odoo>
    <data>
<!-- Wizard Invoice Report EBM-->
        <record id="wizard_invoice_ebm_report_form" model="ir.ui.view">
            <field name="name">wizard.invoice.ebm.report.form</field>
            <field name="model">wizard.invoice.ebm.report</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="report_sel"/>
                            <field name="status"/>
                        </group>
                        <group>
                            <field name="date_from" required="True" invisible="report_sel != 'Custom Dates'"/>
                            <field name="date_to" required="True" invisible="report_sel != 'Custom Dates'"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Print PDF" type="object" name="invoice_report_pdf" class="oe_highlight"/>
                        <!-- <button string="Print xlsx" type="object" name="staff_report_xlsx" class="oe_highlight"/> -->
                        <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wizard_invoice_ebm_report_action" model="ir.actions.act_window">
            <field name="name">Invoice Dates Reports</field>
            <field name="res_model">wizard.invoice.ebm.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_invoice_ebm_report_form"/>
            <field name="target">new</field>
        </record>

        <menuitem id="wizard_invoice_ebm_report_menu"
                  name="Invoice Datas"
                  parent="reprt_ebm"
                  action="wizard_invoice_ebm_report_action"
                  sequence="1"/>

    </data>
</odoo>

